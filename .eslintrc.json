{
  "extends": [
    "react-app"
  ],
  "plugins": [
    "react-hooks",
    "sonarjs"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "project": "./tsconfig.json"
  },
  "env": {
    "jest": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "off",
      {
        "additionalHooks": "useRecoilCallback"
      }
    ],
    "no-shadow": [
      2,
      {
        "hoist": "all"
      }
    ],
    "sonarjs/prefer-immediate-return": "error"
  }
}
